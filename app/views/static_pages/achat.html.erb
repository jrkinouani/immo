<section class="house">
  <div class="container">
    <div class="row">
      <div class="text-center">
        <h3 class="title_reunion"> Voici nos logements à vendre</h3>
      </div>
    </div>
    <div class="row">
      <% @ventes.each do |vente| %>
              <div class="col-md-4 col-sm-4 hero-feature">
                  <div class="thumbnail" id="thumbnail_thumbnail">
                      <img src="<%= vente.image1.url %>" alt="" class="img_home">
                      <div class="caption">
                          <h5 class="desc_home"><%= vente.city.capitalize %>, <%= vente.desc_home %> </h5>
                          <p>
                              <h5 class="price"><%= vente.price %> € </h5>
                              <%= link_to "Plus d'infos" ,  galerie_vente_path(:id => vente.id)%>
                          </p>
                      </div>
                  </div>
              </div>
            <% end %>
      </div>
  </div>
</section>
