<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= form_for @reservation do | f |%>
      <div class="form-group">
          <label>Rentrer un prix</label>
          <%= f.text_field :price,  class: "form-control" %>
      </div>
        <div class="form-group">
          <%= f.hidden_field :logement_id, value: @logement.id %>
          <div class="row">
            <div class="text-center">
              <%= f.submit 'Validez votre location', :class => "btn btn-primary navbar-btn", :id => "btn_show"%>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
